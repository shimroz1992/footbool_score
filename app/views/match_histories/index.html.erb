
<p id="notice"><%= notice %></p>

<h1>Match Histories</h1>
<%= link_to 'Show Raw File', match_histories_show_raw_file_path %>

<table class="container" id="table-team">
  <thead>
    <tr>
      <th>Team</th>
      <th>Played</th>
      <th>Won</th>
      <th>Lost</th>
      <th>Draw</th>
      <th>Goal Done by Team</th>
      <th>Goal Against Team</th>
      <th>Points</th>
      <th>Differnce</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @match_histories.each_with_index do |match_history,index| %>
        <% class_name = index == 0 ? "active-class" : "" %>
      <tr class="<%= class_name %>">
        <td><%= match_history&.team&.name %></td>
        <td><%= match_history.played %></td>
        <td><%= match_history.won %></td>
        <td><%= match_history.lost %></td>
        <td><%= match_history.draw %></td>
        <td><%= match_history.goal_out %></td>
        <td><%= match_history.goal_in %></td>
        <td><%= match_history.points %></td>
        <td><%= match_history.match_difference %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

